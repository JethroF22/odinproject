<h1><%= @article.title %></h1>
<h2>By <%= @article.author %></h2>

<p>
  Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
    <% end %>
</p>

<% if @article.image.exists? %>
<p><%= image_tag @article.image.url %></p>
<% end %>

<p><%= @article.body %></p>

<% if logged_in? %>
  <br /><%= link_to "Edit this article", edit_article_path(@article) %> â”€

  <%= link_to "Delete this article", article_path(@article), method: :delete, data: {confirm: "Really delete the article?"} %><br />

  <h3>Comments (<%= @article.comments.size %>)</h3>
  <%= render partial: 'articles/comment', collection: @article.comments %>

  <%= render partial: "comments/form" %>

  <br /><%= link_to "<< Back to Articles List", articles_path %>
<% end %>
